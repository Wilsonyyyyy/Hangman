<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item android:left="3dp" android:top="5dp">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="2dp">
        <shape android:layout_width="wrap_content">
            <solid android:color="#E6E3E6" />
            <stroke
                android:width="2dp"
                android:color="#189398" />
            <corners android:radius="6dp" />

        </shape>
    </item>

    <item android:width="40dp"
        android:height="40dp"
        android:gravity="right"
       android:drawable="@drawable/ic_baseline_skip_next_24">
    </item>

</layer-list>